<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_search"
    tools:context=".ConsumerProfile.ClientSearchHireActivity">

    <ImageView
        android:id="@+id/img_move_towards_hire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        app:tint="@color/black"
        android:src="@drawable/round_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/label_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="SEARCH"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/label_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City / Village"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/label_search"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_search_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bhubaneswar"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="15dp"
        android:textSize="12sp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedittextsearchclienthire"
        android:drawableRight="@drawable/arrow_down"
        app:drawableTint="@color/drawableicon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_city"/>



    <TextView
        android:id="@+id/label_skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_search_city"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_search_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E.g Tile Mistri"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="15dp"
        android:textSize="12sp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedittextsearchclienthire"
        android:drawableRight="@drawable/arrow_down"
        app:drawableTint="@color/drawableicon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_skills"/>


    <Button
        android:id="@+id/btn_hire_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedbutton"
        android:text="HIRE"
        android:textSize="12sp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search_skills" />

</androidx.constraintlayout.widget.ConstraintLayout>